<!DOCTYPE html>
<html>
<head>
  <title>Equipment List</title>

  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<% if (!user) { %>
  <p>Welcome!, Please <a href="/login">log in</a></p>

<% } else { %>

<div class="container">

  <h1>INDEX VIEW</h1>
  Username: <%= user.username %><br/>
  <a href="/logout">Logout</a>


  <h1>Equipment</h1>
  <a href="/api/equipment/new">Add New Equipment here!</a>
  <table class="table table-hover">
      <thead>
          <tr>
            <th>Item Title</th>
            <th>Serial</th>
            <th>Description</th>
            <th>Availability</th>
            <th colspan="3"></th>
          </tr>
      </thead>

      <tbody>
        <tr>
          <div id="itemTitleHere"></div>
          <div id="serialNumberHere"></div>
          <div id="descriptionHere"></div>
          <div id="availabilityHere"></div>
            <td class="btn btn-success btn-xs">Show Item</td>
            <td class="btn btn-warning btn-xs">Edit Item</td>
            <td class="btn btn-danger btn-xs">Edit Item</td>
        </tr>
      </tbody>
  </table>


</div>
<% } %>
<div class="container">

<h1> Input New Equipment </h1>
<br>

  <form>

    <div class="form-group row">
      <label for="itemTitleLabel" class="col-sm-2 form-control-label">Item Title</label>
      <div class="col-sm-8">
        <input type="itemTitleInput" class="form-control" id="itemTitle" placeholder="Item Title">
      </div>
    </div>

    <div class="form-group row">
      <label for="serialNumberLabel" class="col-sm-2 form-control-label">Serial Number</label>
      <div class="col-sm-8">
        <input type="password" class="form-control" id="serial" placeholder="Serial Number">
      </div>
    </div>

     <div class="form-group row">
      <label for="descriptionLabel" class="col-sm-2 form-control-label">Description</label>
      <div class="col-sm-8">
<!--         <input type="field" class="form-control" id="descInput" placeholder="Description">
 -->  <textarea class="form-control" rows="3"></textarea>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-secondary">submit</button>
      </div>
    </div>

  </form>

</div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script type="text/javascript" src="./public/js/main.js"></script>
</body>
</html>



