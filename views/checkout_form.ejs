 <h1> Check out equipment </h1>

 <form action="/equipment/checkInCheckOut/<%= equipment._id %>" method="post" class="form-horizontal">

   <div class="form-group">
     <div class="col-sm-8">
       <label class="control-label">First Name</label>
       <input class="form-control" type="text" name="firstName"/><br/>
     </div>
   </div>

   <div class="form-group">
     <div class="col-sm-8">
       <label class="control-label">Last Name</label>
       <input class="form-control" type="text" name="lastName"/>
     </div>
   </div>

   <div class="form-group">
     <div class="col-sm-8">
       <label class="control-label">Email</label>
       <input class="form-control"  type="text" name="email"/>
     </div>
   </div>

   <div class="form-group">
     <div class="col-sm-8">
       <label class="control-label">Comments</label>
       <textarea class="form-control" rows="5" name="comment"></textarea>
     </div>
   </div>

   <div class="form-group">
     <div class="col-sm-8">
       <input class="btn btn-default" type="submit" value="Submit" id="checkoutButton"/>
     </div>
   </div>

